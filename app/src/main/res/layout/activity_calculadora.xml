<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/preto"
    android:orientation="vertical"
    tools:context=".calculadora">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1.1"
        android:background="@color/branco">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fundo3"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/voltar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:src="@drawable/setinha" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Calculadora"
                android:gravity="center"
                android:textColor="@color/branco"
                android:textSize="25dp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:src="@drawable/ic_interrogacao" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/branco"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/expressao"
                style="@style/texto"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/branco" />


        </ScrollView>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/resultado"
            style="@style/texto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeMinTextSize="20sp"
            android:autoSizePresetSizes="@array/autosize"
            android:background="@color/branco" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="6.5"
        android:background="@drawable/fundotecladopreto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="c"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/backspace"
                android:src="@drawable/ic_backspace"
                android:scaleType="centerCrop"
                android:padding="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/porcentagem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="%"
                android:textColor="@color/cinza"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisao"
                style="@style/botaocalculadora"
                android:layout_width="0dp"
                android:textColor="@color/cinza"
                android:layout_height="match_parent"
                android:background="@color/semcor"
                android:text="รท" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vezes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="x"
                android:textSize="20sp"
                android:textColor="@color/cinza"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textColor="@color/cinza"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:layout_weight="1"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:layout_weight="1"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mais"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textColor="@color/cinza"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nfatorial"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="!"
                android:layout_weight="1"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_weight="1"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/virgula"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=","
                android:layout_weight="1"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/iguala"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="="
                android:textColor="@color/verdeouazulsla"
                android:background="@color/semcor"
                style="@style/botaocalculadora"/>



        </LinearLayout>







    </LinearLayout>


</LinearLayout>