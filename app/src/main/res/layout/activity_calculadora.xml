<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/preto"
    android:orientation="vertical"
    tools:context=".calculadora">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@color/branco">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/fundo3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/calculadora"
                android:layout_weight="0.3"/>

            <TextView
                android:layout_width="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Calculadora"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:textColor="@color/branco"/>




        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/branco"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/expressao"
            style="@style/texto"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="45sp"
            app:autoSizeMinTextSize="20sp"
            android:autoSizePresetSizes="@array/autosize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/branco" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/resultado"
            style="@style/texto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeMinTextSize="20sp"
            android:autoSizePresetSizes="@array/autosize"
            android:background="@color/branco" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/c"
                style="@style/numeros"
                android:text="C" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/backspace"
                style="@style/numeros"
                android:scaleType="center"
                android:src="@drawable/backspacecalculadora" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/porcentagem"
                style="@style/operadores"
                android:text="%" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisao"
                style="@style/operadores"
                android:text="รท"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n7"
                style="@style/numeros"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n8"
                style="@style/numeros"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n9"
                style="@style/numeros"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vezes"
                style="@style/operadores"
                android:text="x" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n4"
                style="@style/numeros"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n5"
                style="@style/numeros"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n6"
                style="@style/numeros"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menos"
                style="@style/operadores"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n1"
                style="@style/numeros"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n2"
                style="@style/numeros"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n3"
                style="@style/numeros"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mais"
                style="@style/operadores"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/n0"
                style="@style/numeros"
                android:layout_weight="2"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/virgula"
                style="@style/numeros"
                android:gravity="center"
                android:text="," />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/iguala"
                style="@style/botao"
                android:backgroundTint="@color/verdeouazulsla2"
                android:text="="
                android:textColor="@color/branco" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>